component GridMover {
	FP Speed;
	FP SpeedMultiplier;
	int Direction;
	byte TeleportFrames;
	bool IsLocked;
	bool IsStationary;

	FP DistanceMoved;

	FP FreezeTime;
}

signal OnGridMoverChangeTile(entity_ref entity, FPVector2 tile);

event GridMoverChangeTile {
	entity_ref Entity;
	FPVector2 Tile;
}

event GridMoverReachedCenterOfTile {
	entity_ref Entity;
	FPVector2 Tile;
}

event TeleportEvent {
	entity_ref Entity;
	bool IsTeleporting;
}